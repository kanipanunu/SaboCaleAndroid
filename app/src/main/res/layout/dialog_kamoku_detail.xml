<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_Dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >

        <TextView
            android:id="@+id/kamoku_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:gravity="center"
            android:text="英語R"
            android:textColor="#6f463b"
            android:textSize="30sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:progressDrawable="@drawable/progressber01" />

    <TextView
        android:id="@+id/absenceText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2"
        android:textColor="#6f463b"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/attendText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="30"
        android:textColor="#6f463b"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/all_classCountText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="99"
        android:textColor="#6f463b"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="right|bottom" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="bottom|right"
            android:text="あと"
            android:textColor="#6f463b"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/saboriCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="31"
            android:textColor="#6f463b"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="回さぼれるよ"
            android:textColor="#6f463b"
            android:textSize="10sp" />
    </LinearLayout>

    <Button
        android:id="@+id/intentButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right|center"
        android:layout_weight="1"
        android:text="詳細" />

</LinearLayout>