<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.litechmeg.sabocale" >

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sabocale" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="SaboCale.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
        <activity
            android:name=".view.activity.StartActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.CalendarActivity"
            android:label="@string/title_activity_calendar"/>
        <activity
            android:name=".view.activity.DayAttendanceActivity"
            android:label="@string/title_activity_day_attendance"/>
        <activity
            android:name=".view.activity.KamokuListActivity"
            android:label="@string/title_activity_kamoku_list"/>
        <activity
            android:name=".view.activity.SettingsActivity"
            android:label="@string/title_activity_day_settings"/>
        <activity
            android:name=".view.activity.TodoActivity"
            android:label="@string/title_activity_todo"/>
        <activity
            android:name=".view.activity.EditActivity"
            android:label="@string/title_activity_edit"/>
        <activity
            android:name=".view.activity.AttendanceListActivity"
            android:label="@string/title_activity_attendance_list"/>
    </application>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

</manifest>
